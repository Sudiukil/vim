let mapleader = ','

" Global
map <C-w> :close<CR>

" Search
map <leader>/ :nohlsearch<CR>

" Tabs
map <C-t> :tabnew<CR>
map <S-left> :tabprev<CR>
map <S-right> :tabnext<CR>

" Windows
map <C-v> :vsplit<CR>
map <C-h> :split<CR>
map <C-left> :wincmd h<CR>
map <C-right> :wincmd l<CR>
map <C-up> :wincmd k<CR>
map <C-down> :wincmd j<CR>

" Vim config
map <leader>, :tabedit ~/.vim/vimrc<CR>
map <leader>. :tabedit ~/.vim/mappings<CR>
map <F5> :source ~/.vim/vimrc<CR>

" FZF
map <C-p> :FZF<CR>
